mount /mnt
mount /mnt/boot
swapon

pacstrap /mnt base

genfstab -U /mnt >> /mnt/etc/fstab

arch-chroot /mnt


echo ygdesk > /etc/hostname
nano /etc/mkinitcpio.conf
mkinitcpio -p linux
pacman -S grub
grub-install  /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg
passwd
useradd ygromov
passwd ygromov
mkdir /home/ygromov
chown ygromov:ygromov /home/ygromov

####################################################

pacman -S xorg xorg-xinit plasma konsole
nano /etc/sddm.conf
Current=breeze
systemctl enable sddm




####################################################
echo "alias ll='ls -lah --color'" >> /etc/bash.bashrc
echo "ygromov ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

cd /etc/netctl/
cp examples/ethernet-static  ./
nano ethernet-static
netctl start ethernet-static
netctl enable ethernet-static

timedatectl status
timedatectl set-ntp true

nano /etc/locale.gen
locale-gen
nano /etc/locale.conf
LANG=en_US.UTF-8
LC_MESSAGES=en_US.UTF-8

ln -fs /usr/share/zoneinfo/Europe/Moscow /etc/localtime
hwclock --systohc --utc


pacman -S terminus-font ttf-dejavu
pacman -S firefox chromium vlc dolphin yakuake qt4 hdparm freerdp krdc
pacman -S htop strace lsof tcpdump lshw tmux bind-utils net-tools mc
pacman -S virtualbox
modpobe vboxdrv
pacman -S libreoffice
pacman -S syslog-ng
systemctl enable syslog-ng
systemctl start syslog-ng
